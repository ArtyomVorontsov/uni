LXI H, 0x0001
MVI C, 1

; Populate with numbers
INITLOOP: MOV M, C 
INR L
INR C
MOV A, L
CPI 11
JC INITLOOP

LXI H, 0x0000
MOV A, M ; Get control value

CPI 1
JC SUMBOTHPARTS
CPI 2
JC SUMFIRSTPART
CPI 3
JC SUMSECONDPART


SUMBOTHPARTS: LXI H, 0x0001
MVI B, 11
JMP SUMPARTSLOOP

SUMFIRSTPART: LXI H, 0x0001
MVI B, 6
JMP SUMPARTSLOOP

SUMSECONDPART: LXI H, 0x0006
MVI B, 11
JMP SUMPARTSLOOP

SUMPARTSLOOP: MOV E, M ; Addition
MOV A, D
ADD E
MOV D, A

INR L
MOV A, L
CMP B
JC SUMPARTSLOOP

LXI H, 0x000B
MOV M, D

HLT


